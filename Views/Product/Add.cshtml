@model WebsiteBanHang.Models.Product
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Thêm sản phẩm";
}

<div class="container mt-4">
<div class="card shadow-lg p-4"
     style="background: white;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);">
    <h2 class="text-center text-green">
        <i class="fas fa-plus-circle"></i> Thêm sản phẩm mới
    </h2>
    <hr class="bg-danger"> <!-- Dòng kẻ màu đỏ -->

        <form asp-action="Add" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold text-white">
                    <i class="fas fa-tag"></i> Tên sản phẩm
                </label>
                <input asp-for="Name" class="form-control border-0 shadow-sm rounded-3" placeholder="Nhập tên sản phẩm" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label fw-bold text-white">
                    <i class="fas fa-dollar-sign"></i> Giá sản phẩm
                </label>
                <input asp-for="Price" class="form-control border-0 shadow-sm rounded-3" placeholder="Nhập giá sản phẩm" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-bold text-white">
                    <i class="fas fa-align-left"></i> Mô tả
                </label>
                <textarea asp-for="Description" class="form-control border-0 shadow-sm rounded-3" rows="3" placeholder="Nhập mô tả sản phẩm"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label fw-bold text-white">
                    <i class="fas fa-layer-group"></i> Danh mục
                </label>
                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select border-0 shadow-sm rounded-3">
                    <option value="">-- Chọn danh mục --</option>
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label fw-bold text-white">
                    <i class="fas fa-image"></i> Hình ảnh sản phẩm
                </label>
                <input type="file" asp-for="ImageUrl" class="form-control border-0 shadow-sm rounded-3" />
            </div>

        <div class="text-center">
    <button type="submit" class="btn btn-light btn-lg shadow rounded-pill hover-effect">
        <i class="fas fa-plus-circle"></i> Thêm sản phẩm
    </button>
    <button type="reset" class="btn btn-danger btn-lg shadow rounded-pill hover-effect">
        <i class="fas fa-times-circle"></i> Hủy
    </button>
</div>

        </form>
    </div>
</div>

@* CSS *@
<style>
  /* Background trắng & chữ xanh lá */
body {
    background: white;
    color: #009A07; /* Màu xanh lá */
}

/* Tiêu đề và nhấn mạnh chữ màu xanh lá */
.text-green {
    color: #009A07 !important;
}

/* Chỉnh màu chữ của label và input */
.form-label {
    color: #009A07 !important;
}

/* Viền input xanh lá */
.form-control {
    color: #009A07;
    border: 1px solid #009A07 !important;
}

/* Màu chữ đỏ để nhấn mạnh một số thông tin */
.text-danger {
    color: #D90000 !important;
    font-weight: bold;
}

/* Chỉnh màu cho nút */
.btn-light {
    color: white !important;
    background-color: #009A07 !important;
    border: none;
}

    .btn-light:hover {
        background-color: #006B05 !important; /* Xanh đậm hơn khi hover */
        color: white !important;
    }

/* Chỉnh màu nhấn mạnh cho tiêu đề */
h2 {
    color: #009A07 !important;
}

/* Nút nhấn mạnh có màu đỏ */
.btn-danger {
    background-color: #D90000 !important;
    border: none;
}

    .btn-danger:hover {
        background-color: #A80000 !important; /* Màu đỏ đậm hơn khi hover */
    }

/* Card background trắng */
.card {
    background: white;
    border-radius: 15px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
}
</style>
